{% strip %}
<?xml version="1.0" encoding="utf-8"?>
<yml_catalog date="{{date}}">
  <shop>
    <name>ПрезидентВотчес</name>
    <company>ООО "АВАНГАРД-РИТЕЙЛ"</company>
    <url>{{base_url}}</url>
    
    <currencies>
      <currency id="RUR" rate="1"/>
    </currencies>
    
    <categories>
        <category id="10001" 
        >Все товары
        </category>
        <category id="10002" parentId="10001" 
        >Одежда, обувь и аксессуары
        </category>
        <category id="10003" parentId="10002" 
        >Аксессуары и украшения
        </category>
        <category id="10004" parentId="10003" 
        >Часы и аксессуары
        </category>
        <category id="10005" parentId="10004" 
        >Наручные часы
        </category>
        {% for node in nodes %}
        <category id="{{node.id}}" 
          parentId="10005"
        >{{node.value}}
        </category>
        {% endfor %}
    </categories>

    <offers>
      {% for p in products %}
        <offer id="{{p.id}}" available="{{p.is_in_stock|lower}}">

            <url>{{base_url}}{{p.absolute_url}}</url>
            <price>{{p.price}}</price>
            <currencyId>RUR</currencyId>
            <categoryId>{{ get_yml_node(p)['id'] }}</categoryId>
            {% if p.has_image %}
            <picture>{{base_url}}{{p.image.url}}</picture>
            {% endif %}
            {% for photo in p.images.all()[:9] %}
            {% if photo.has_image %}
            <picture>{{base_url}}{{photo.image.url}}</picture>
            {% endif %}
            {% endfor %}
            <delivery>true</delivery>
            <vendor>{{p.brand}}</vendor>
            <model>{{p.model}}</model>
            <name>{{p.name}}</name>
            {% if p.description %}
            <description>{{p.html_free_description}}</description>
            {% endif %}
            <sales_notes>Доставка по России без предоплаты.</sales_notes>
            
            {% for key, values_list in p.attributes.items() %}
                {% for value in values_list %}
                <param name="{{key}}">{{value.value}}</param>
                {% endfor %}
            {% endfor %}

        </offer>
      {% endfor %}
    </offers>
  </shop>
</yml_catalog>
{% endstrip %}