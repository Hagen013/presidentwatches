{% filter trim %}
<?xml version="1.0" encoding="utf-8"?>
<yml_catalog date="{{date}}">
  <shop>
    <name>ПрезидентВотчес</name>
    <company>ООО "АВАНГАРД-РИТЕЙЛ"</company>
    <url>{{base_url}}/</url>
    
    <currencies>
      <currency id="RUR" rate="1"/>
    </currencies>
    
    <categories>
      {% for c in categories %}
        {% if loop.index == 1 %}
        <category id="{{c.id}}" 
        >Каталог наручных часов
        </category>
        {% else %}
        <category id="{{c.id}}" 
                {% if c.parent %}
                  parentId="{{c.parent.id}}"
                {% endif %}
        >{{c.name}}
        </category>
        {% endif %}
      {% endfor %}
    </categories>

    <offers>
      {% for p in products %}
        <offer id="{{p.id}}" available="{{p.is_in_stock|lower}}">

            <url>{{base_url}}{{p.absolute_url}}</url>
            <price>{{p.price}}</price>
            <currencyId>RUR</currencyId>
            {% if p.product_type %}
            <categoryId>{{ get_product_category(p).id }}</categoryId>
            {% else %}
            <categoryId>1</categoryId>
            {% endif %}
            {% if p.has_image %}
            <picture>{{base_url}}{{p.image.url}}</picture>
            {% endif %}
            {% for photo in p.images.all()[:9] %}
            {% if photo.has_image %}
            <picture>{{base_url}}{{photo.image.url}}</picture>
            {% endif %}
            {% endfor %}
            <delivery>true</delivery>
            <name>{{p.name}}</name>
            <vendor>{{p.brand}}</vendor>
            <model>{{p.model}}</model>
            {% if p.description %}
            <description>{{p.html_free_description}}</description>
            {% endif %}
            <manufacturer_warranty>true</manufacturer_warranty>
            
            {% for key, values_list in p.attributes.items() %}
                {% for value in values_list %}
                <param name="{{key}}">{{value.value}}</param>
                {% endfor %}
            {% endfor %}

        </offer>
      {% endfor %}
    </offers>
  </shop>
</yml_catalog>
{% endfilter %}